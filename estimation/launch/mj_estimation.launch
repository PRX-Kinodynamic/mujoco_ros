<launch>

	<arg name="simulation" value="true"/>

	<arg name="mujoco_cam_file" value="$(find estimation)/config/mujoco_cam.yaml"/>
	<arg name="logitech_cam_file" value="$(find estimation)/config/cTw_cam0.yaml"/>

	<arg name="cam_file" if="$(arg simulation)" value="$(arg mujoco_cam_file)" />
  <arg name="cam_file" unless="$(arg simulation)" value="$(arg logitech_cam_file)" />
  
  <arg name="current_ns" value="mushr"/>
  
  <arg name="rgb_topic" default="/$(arg current_ns)/camera/rgb"/>
  <arg name="image_topic" default="/$(arg current_ns)/camera/markers"/>
  <arg name="markers_topic" default="/$(arg current_ns)/markers"/>

  <arg name="world_frame" default="world"/>
  <arg name="robot_frame" default="robot_0"/>

  <group ns="$(arg current_ns)">
    <node pkg="nodelet" type="nodelet" name="mj_estimation_nodelet"  args="manager" output="screen"/>

    <node pkg="nodelet" type="nodelet" name="aruco_detection_nodelet_t" args="load perception/aruco_detection_nodelet_t mj_estimation_nodelet" output="screen">
        <!-- <rosparam command="load" file="$(find perception)/config/aruco_detection.yaml" /> -->
      	<param name="publish_markers_img" value="true" />
      	<param name="rgb_topic" value="$(arg rgb_topic)" />
      	<param name="image_topic" value="$(arg image_topic)" />
      	<param name="markers_topic" value="$(arg markers_topic)" />
    </node>

    <node pkg="nodelet" type="nodelet" name="aruco_cTw_nodelet_t" args="load estimation/aruco_cTw_nodelet_t mj_estimation_nodelet" output="screen">
      <rosparam command="load" file="$(arg cam_file)" />
      <param name="vizualize_markers" value="true" />
      <param name="markers_topic_name" value="$(arg markers_topic)" />
    </node>  

    <node pkg="nodelet" type="nodelet" name="aruco_wTc_nodelet_t" args="load estimation/aruco_wTc_nodelet_t mj_estimation_nodelet" output="screen">
      <rosparam command="load" file="$(arg cam_file)" />
      <param name="pose_topic" value="/$(arg current_ns)/aruco_cTw/robot_pose" />
      <param name="image_topic" value="$(arg image_topic)"/>
      <param name="goal_pose_topic" value="/$(arg current_ns)/goal_pos"/>
			<param name="goal_rad_topic" value="/$(arg current_ns)/goal_radius"/>
			<param name="trajectory_topic" value="/$(arg current_ns)/ml4kp_traj"/>
			<param name="camera_frame" value="camera"/>
			<param name="world_frame" value="$(arg world_frame)"/>
			<param name="robot_frame" value="$(arg robot_frame)"/>
    </node>   

    <!-- <node pkg="nodelet" type="nodelet" name="plant_estimator_nodelet_t" args="load estimation/plant_estimator_nodelet_t mj_estimation_nodelet" output="screen">
			<param name="plan_topic" value="/$(arg current_ns)/ml4kp_plan"/>
			<param name="trajectory_topic" value="/$(arg current_ns)/ml4kp_traj"/>
			<param name="simulation_step" value="0.1"/>
			<param name="observation_dim" value="3"/>
			<param name="world_frame" value="world"/>
			<param name="robot_frame" value="robot_0"/>
    </node>  -->  
 
   </group>
	<!-- <node pkg="tf2_ros" type="static_transform_publisher" name="tf_world"  -->
		<!-- args="0 0 0 0 0 0 1  marker_50 world" /> -->
	<!-- <node pkg="tf2_ros" type="static_transform_publisher" name="tf_world"  -->
		<!-- args="0 0 0 0 0 0 1  marker_54 world" /> -->
</launch>
